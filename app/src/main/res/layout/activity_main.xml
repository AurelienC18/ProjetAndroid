<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@mipmap/ic_micro" android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="toRecorder"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@mipmap/ic_navigation" android:id="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" android:onClick="toMap"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@mipmap/ic_compass" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView" android:onClick="toCompass"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@mipmap/ic_info" android:id="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@mipmap/ic_light" android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView5"
            android:onClick="toLamp"/>
</androidx.constraintlayout.widget.ConstraintLayout>